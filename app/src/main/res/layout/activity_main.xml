<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="191dp"
        tools:layout_editor_absoluteY="183dp">

        <TextView
            android:id="@+id/main_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|clip_vertical|center_horizontal"
            android:text="@string/main_title"
            android:textIsSelectable="false"
            android:textSize="36sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center|top"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/firstLetter"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:autofillHints="@string/first_letter_hint"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/first_letter_hint"
                android:inputType="text|textCapWords"
                android:maxLength="1"
                android:textSize="75sp" />

            <EditText
                android:id="@+id/secondLetter"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:autofillHints="@string/second_letter_hint"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/second_letter_hint"
                android:inputType="text|textCapWords"
                android:maxLength="1"
                android:textSize="75sp" />

            <EditText
                android:id="@+id/thirdLetter"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:autofillHints="@string/third_letter_hint"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/third_letter_hint"
                android:inputType="text|textCapWords"
                android:maxLength="1"
                android:textSize="75sp" />

        </LinearLayout>

        <Button
            android:id="@+id/search_button"
            android:layout_width="300dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/search_button" />

        <TextView
            android:id="@+id/search_results"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>